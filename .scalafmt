style = defaultWithAlign

align = true    // For pretty alignment.
maxColumn = 100 // For my wide 30" display.
docstrings = ScalaDoc // Align by second asterisk.

danglingParentheses = true
indentOperator = akka
unindentTopLevelOperators = true

rewrite.rules = [
  AvoidInfix
  RedundantBraces
  RedundantParens
  AsciiSortImports
  PreferCurlyFors
]
